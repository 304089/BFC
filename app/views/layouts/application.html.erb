<!DOCTYPE html>
<html>
  <head>
    <title>BFC</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://kit.fontawesome.com/5b5304f2df.js" crossorigin="anonymous"></script>
  </head>

  <body>
    <%= render "layouts/header" %>
    <%= form_with url:search_path,locla:true do |f| %>
      <%= f.search_field :search %>
      <%= f.submit "検索" %>
    <% end %>
    <%= yield %>
  </body>
</html>
