  <%= link_to post_favorite_path(post.id) do %>
    <h5><%= post.favorites.count %>いいね</h5>
  <% end %>

 <% unless post.user == current_user %>
    <% if Favorite.find_by(user_id: current_user.id,post_id: post.id) %>
      <%= link_to "いいねを取り消す",post_favorite_path(post.id),method: :delete,remote: true %>
    <% else %>
      <%= link_to "いいね",post_favorite_path(post.id),method: :post,remote: true %>
    <% end %>
 <% end %>